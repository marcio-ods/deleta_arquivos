{
  "tasks": {
    "start": "deno run -A  src/main.ts",
    "build": " deno compile --output ./dist/deleta-arquivos/deleta-arquivos -A src/main.ts ",
    "dev": " deno run -A --watch --unsafely-ignore-certificate-errors ./src/main/main.ts",
    "server": " deno run -A --watch ./src/main/server.ts",
    "lint": " deno lint ",
    "fmt": "deno fmt  --watch",
    "cache": "deno cache --reload https://deno.land/x/tcp_socket@0.0.1/mods.ts"
  },
  "unstable": [""],
  "importMap": "./import_map.json",
  "lint": {
    "files": {
      "include": ["src/"],
      "exclude": ["dist/", "DATA/", "old/", "doc/", "docs/"]
    },
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  }
}
