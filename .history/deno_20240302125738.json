{
  "imports": {
    "dist/": "./dist/",
    "exists": "https://deno.land/std@0.217.0/fs/exists.ts",
    "parse_args": "https://deno.land/std@0.207.0/cli/parse_args.ts",
    "assert": "https://deno.land/std@0.218.0/assert/mod.ts",
    "datetime": "https://deno.land/std@0.218.2/datetime/mod.ts",
    "@/": "./"
  },
  "tasks": {
    "start": "deno run -A  src/main.ts",
    "build": " deno compile --output ./dist/deleta-arquivos/deleta-arquivos -A src/main.ts ",
    "dev": " deno run -A --watch --unsafely-ignore-certificate-errors ./src/main/main.ts",
    "server": " deno run -A --watch ./src/main/server.ts",
    "lint": " deno lint ",
    "fmt": "deno fmt  --watch",
    "cache": "deno cache --reload https://deno.land/x/tcp_socket@0.0.1/mods.ts"
  },
  "unstable": [""],
  "importMap": "./import_map.json",
  "lint": {
    "include": ["src"],
    "exclude": ["dist"],
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"],
      "exclude": ["no-unused-vars"]
    }
  },
  "fmt": {
    "files": {
      "include": ["src/"]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 4,
      "singleQuote": true,
      "proseWrap": "preserve"
    }
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "name": "deleta_arquivos"
}
